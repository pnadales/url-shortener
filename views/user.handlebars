<header>
  <h1>Hola, {{username}}</h1>
  <div id="card-form-container">
    <div class="card-form">
      <h3 class="py-3">INGRESA LA URL</h3>
      <form
        id="newLink-form"
        action="http://localhost:3000/link/new"
        method="POST"
      >
        <input
          type="url"
          name="url"
          id="url-input"
          title="Ingresa URL"
          placeholder="URL"
          required
          class="input-text"
        />
        <input type="hidden" id="user_id" name="user_id" value="{{id}}" />

        <div class="submit-container">
          <input type="submit" value="Go!" class="btn" id="submit-btn" />
        </div>
        <div id="loading" class="submit-container d-none">
          <i
            class="fa-solid fa-spinner fa-spin fs-5"
            style="color: #89d2dc"
          ></i>
        </div>
      </form>
    </div>
  </div>
  <div
    class="modal fade"
    id="Url-modal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header justify-content-center">
          <h1 class="modal-title fs-5" id="ModalLabel">
            Este es tu MiniLink
          </h1>
        </div>
        <div class="modal-body">
          <p id="MiniLink">Si ves esto es un problema</p>
          <button id="copy" title="¡Link Copiado!">
            <i class="fa-solid fa-copy"></i>
          </button>
        </div>
        <div class="modal-footer justify-content-center">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cerrar
          </button>
        </div>
      </div>
    </div>
  </div>
</header>
<section id="links-table">
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Link Original</th>
        <th scope="col">MiniLink</th>
        <th scope="col">Visitas</th>
        <th scope="col">Copiar Link</th>
        <th scope="col">Eliminar</th>
      </tr>
    </thead>
    <tbody>
      {{#each Links}}
        <tr>
          <td>°</td>
          <td>{{this.original_url}}</td>
          <td>{{this.nombre}}</td>
          <td>{{this.visit_counter}}</td>
          <td>{{this.especialidad}}</td>

          <td>Aprobado</td>

        </tr>
      {{/each}}

    </tbody>
  </table>
</section>